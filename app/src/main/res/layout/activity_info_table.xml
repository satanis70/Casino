<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoTableActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView_number_team"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="2"
                    android:text="№"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textView_name_team"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="7"
                    android:textColor="@color/black"
                    android:text="Команда"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textViewI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="И"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textViewV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="В"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textViewN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Н"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textViewP"
                    android:layout_width="0dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="П"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textView_balls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:text="Матчи"
                    android:textSize="14sp"></TextView>

                <TextView
                    android:id="@+id/textViewO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="О"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
    </TableLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:listitem="@layout/recycler_table_item">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>